{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "targetDefaults": {
        "build": {
            "dependsOn": ["^build"],
            "cache": true
        },
        "lint": {
            "cache": true
        },
        "test": {
            "cache": true
        }
    },
    "release": {
        "projects": ["packages/*"],
        "projectsRelationship": "independent",
        "version": {
            "generatorOptions": {
                "updateDependents": "auto"
            }
        },
        "changelog": {
            "workspaceChangelog": false
        },
        "publish": {
            "registry": "https://registry.npmjs.org"
        }
    }
}
