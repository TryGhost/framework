{
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TryGhost/framework.git"
  },
  "author": "Ghost Foundation",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "eslintIgnore": [
    "**/node_modules/**"
  ],
  "scripts": {
    "dev": "echo \"Implement me!\"",
    "presetup": "yarn",
    "setup": "yarn",
    "test": "nx run-many -t test --outputStyle=dynamic",
    "lint": "nx run-many -t lint --outputStyle=dynamic",
    "preship": "yarn test",
    "ship": "nx release version --git-commit --git-tag --git-push --git-remote ${GHOST_UPSTREAM:-origin} --git-commit-message \"Published new versions\"",
    "ship:patch": "yarn ship patch",
    "ship:minor": "yarn ship minor",
    "ship:major": "yarn ship major",
    "ship:first-release": "yarn ship patch --first-release",
    "ship:ci": "IS_SHIPPING=true bash ./scripts/publish-packages.sh"
  },
  "devDependencies": {
    "@nx/js": "22.0.4",
    "eslint": "8.57.0",
    "eslint-plugin-ghost": "3.4.4",
    "mocha": "11.7.5",
    "nx": "22.0.4",
    "should": "13.2.3",
    "sinon": "21.0.1",
    "ts-node": "10.9.2"
  }
}
